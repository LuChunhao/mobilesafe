<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_phoneLostFindName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aa009600"
        android:gravity="center"
        android:text="手机防盗"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="安全号码：" />

        <TextView
            android:id="@+id/tv_safeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="123" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_devider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="防盗保护是否开启：" />

        <ImageView
            android:id="@+id/iv_isLocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/lock" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_devider" />
    
    <TextView
        android:id="@+id/tv_reSetup"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:text="重新进入设置向导" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/list_devider" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#44000000"
        android:gravity="center_vertical"
        android:text="功能简介" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@android:drawable/btn_star_big_on" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS追踪：#*location*#" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@android:drawable/btn_star_big_on" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="播放报警音乐：#*alarm*#" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@android:drawable/btn_star_big_on" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="远程删除数据：#*wipedata*#" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@android:drawable/btn_star_big_on" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="远程锁屏：#*lockscreen*#" />
    </LinearLayout>

</LinearLayout>