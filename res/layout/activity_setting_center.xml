<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobilesafe="http://schemas.android.com/apk/res/com.myproject.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#aa009600"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.myproject.mobilesafe.view.SettingView
        android:id="@+id/sv_auto_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desc="自动更新已经关闭#自动更新已经开启"
        mobilesafe:title="自动更新设置" />

    <com.myproject.mobilesafe.view.SettingView
        android:id="@+id/sv_blackList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desc="黑名单拦截已经关闭#黑名单拦截已经开启"
        mobilesafe:title="黑名单设置" />

    <com.myproject.mobilesafe.view.SettingView
        android:id="@+id/sv_phonegsd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desc="归属地显示已经关闭#归属地显示已经开启"
        mobilesafe:title="电话归属地设置" />

    <com.myproject.mobilesafe.view.SettingView
        android:id="@+id/sv_app_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desc="看门狗已经关闭#看门狗已经开启"
        mobilesafe:title="程序锁看门狗设置" />

    <RelativeLayout
        android:id="@+id/rv_phone_address"
        android:background="@drawable/item_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_address_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginLeft="3dp"
            android:text="归属地提示框风格"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_address_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address_style"
            android:layout_marginLeft="3dp"
            android:text="苹果绿"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/jiantou_pres"
             />

       
    </RelativeLayout>

</LinearLayout>