<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
     <TextView
        android:id="@+id/tv_item_progress_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="用户进程：3个"
        android:visibility="visible"
        android:textColor="@android:color/white" />
     
     <ImageView
        android:id="@+id/iv_progress_icon"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/tv_item_progress_desc"
        android:background="@drawable/app" />

    <TextView
        android:id="@+id/tv_item_progress_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_item_progress_desc"
        android:layout_toRightOf="@id/iv_progress_icon"
        android:text="应用程序名称"
        android:textSize="18sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tv_item_process_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_item_progress_name"
        android:layout_below="@id/tv_item_progress_name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="占用内存："
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/cb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>
